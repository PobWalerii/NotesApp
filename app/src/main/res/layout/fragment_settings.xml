<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="defaultHeader"
            type="String" />
        <variable
            name="specificationLine"
            type="Boolean" />
        <variable
            name="defaultAddIfClick"
            type="Boolean" />
        <variable
            name="deleteIfSwiped"
            type="Boolean" />
        <variable
            name="dateChanget"
            type="Boolean" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:padding="@dimen/settings_margin"
        tools:context=".ui.settings.SettingsFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/settings_text_size"
                android:textColor="@color/black"
                android:text="Заголовок по умолчанию:"/>

            <EditText
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:textSize="@dimen/settings_text_size"
                android:textColor="@color/blue"
                android:ems="10"
                android:layout_marginBottom="@dimen/settings_margin"
                android:inputType="textPersonName"
                android:text="@{defaultHeader}"
                android:importantForAutofill="no"
                tools:ignore="LabelFor" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/settings_margin"
                android:textSize="@dimen/settings_text_size"
                android:text="Отображение текста сообщения в одну линию"
                android:checked="@{specificationLine}"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/settings_margin"
                android:textSize="@dimen/settings_text_size"
                android:text="При нажатии клавиши + создается пустое сообщение, в противном случае выполняется переход в форму ввода нового сообщения"
                android:checked="@{defaultAddIfClick}"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/settings_margin"
                android:textSize="@dimen/settings_text_size"
                android:text="При просмотре списка разрешить удаление сообщения смахиванием, в противном случае удаление возможно только в форме редактирования"
                android:checked="@{deleteIfSwiped}"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/settings_margin"
                android:textSize="@dimen/settings_text_size"
                android:text="При редактировании сообщения дата сообщения переписывается при изменении содержимого, в противном случае дата не меняется"
                android:checked="@{dateChanget}"/>

        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </layout>